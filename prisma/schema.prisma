generator client {
  provider = "prisma-client-js"
  directUrl = env("DATABASE_URL_UNPOOLED")

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id   String @id @default(uuid())

  email String @unique
  password String 
  name String
  role Role

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  ENGINEER
  USER
}
